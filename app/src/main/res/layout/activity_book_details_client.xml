<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/b5"
    tools:context="Activities.BookDetailsClient">

    <TextView
        android:id="@+id/book_name_text"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/architects_daughter"
        android:inputType="text"
        android:paddingLeft="50px"
        android:text="Book Name"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="84dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@color/black" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Description:"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_image"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/description_book"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="Description"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/category_text"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="book category"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_book"
        app:layout_constraintVertical_bias="0.0" />
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/category_book"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="#FFFFFF"
        android:text="book category"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/publishing_year_text"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="publishing year"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_book"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/publishing_year_book"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="book publishing year"
        android:background="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/publishing_year_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/available_text"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Available:"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.359" />

    <TextView
        android:id="@+id/available_book"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="Available"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.402" />

    <TextView
        android:id="@+id/author_text"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Author"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/available_book"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/author_book"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="Author"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/author_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/language_text"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Language:"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/author_book"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/language_book"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="Language"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/language_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Location:"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/language_book"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/location_book"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="Location"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_text"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/burrow_days_text"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Burrow days"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_book"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/burrow_days_book"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Burrow days"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/burrow_days_text"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/security_deposit_text"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Security deposit for book:"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/burrow_days_book"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/security_deposit_book"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Security deposit for book:"
        android:background="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/security_deposit_text"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/burrow_book"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Reserve"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:background="@drawable/round_btn"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/supplier_info"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Supplier Info"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        android:textSize="13sp"
        android:background="@drawable/round_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />


</androidx.constraintlayout.widget.ConstraintLayout>